<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="revolware.pillsplan.database.Write_Database">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/textview_moreinfo_loading"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textview_moreinfo_info"
        android:text="Info"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_moreinfo_info"
        android:layout_centerHorizontal="true"
        android:id="@+id/textview_moreinfo_contradictions"
        android:text="Kontradikcie"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />



</RelativeLayout>
