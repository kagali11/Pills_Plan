<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/tView1Hint"

        android:layout_gravity="top"
        android:editable="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="#FF0BC273" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="@string/editText2"
        android:inputType="number"
        android:layout_gravity="top"
        android:editable="true"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textColorLink="#FF0BC273" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="@string/editText3"
        android:inputType="date"
        android:layout_gravity="top"
        android:editable="true"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:textColorLink="#FF0BC273" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="@string/editText4"
        android:inputType="number"
        android:layout_gravity="top"
        android:editable="true"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:textColorLink="#FF0BC273" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:hint="@string/editText5"
        android:layout_gravity="top"
        android:editable="true"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:textColorLink="#FF0BC273" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonAdd"
        android:id="@+id/buttonAdd"
        android:onClick="buttonAdd"
        android:textColor="#ffffff"
        android:backgroundTint="#FF0BC273"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
